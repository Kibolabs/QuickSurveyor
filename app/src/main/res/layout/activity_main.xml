<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/heading_holder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="KIBO ANDROID SURVEYOR APP"
        android:background="#effcdf03"
        android:fontFamily="sans-serif"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Are you smart ?"
        android:fontFamily="sans-serif-medium"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="You Answered:"
            android:fontFamily="sans-serif"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:height="60dp"
            android:gravity="center_horizontal"
            android:padding="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <Button
            android:id="@+id/reset_ans_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="resetAnswer"
            android:text="Reset" />

        <Button
            android:id="@+id/next_qn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextQuestion"
            android:text="NEXT QN" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text=" List of Answer Options" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YES" />

    <Button
        android:id="@+id/yes_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choice"
        android:text="YES" />

    <Button
        android:id="@+id/no_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choice"
        android:text="NO" />

    <Button
        android:id="@+id/maybe_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choice"
        android:text="MAYBE" />

    <Button
        android:id="@+id/idk_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choice"
        android:text="I DONT KNOW" />

    <Button
        android:id="@+id/likeIcare_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choice"
        android:text="PREFER NOT TO ANSWER" />
</LinearLayout>
